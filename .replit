
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "static"
publicDir = "dist"
run = ["sh", "-c", ""]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Development Server"
author = 32687169
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "app"

[[workflows.workflow]]
name = "app"
author = "agent"

[[workflows.workflow.tasks]]
